void kasayigoster(){
  
    float toplam = (banka.para[0]*0.25)+(banka.para[1]*0.5)+(banka.para[2]*1);
    Serial.print("\nKasadaki Güncel Para Miktarı\n");
    Serial.print("0.25TL: ");
    Serial.print(banka.para[0]);
    Serial.print(" tane\n");
    Serial.print("0.50TL: ");
    Serial.print(banka.para[1]);
    Serial.print(" tane\n");
    Serial.print("1TL: ");
    Serial.print(banka.para[2]);
    Serial.print(" tane\n");
    Serial.print("Kasa: ");
    Serial.print(toplam);
    Serial.print(" TL");
    
    lcd.clear();
    lcd.print("Kasa: ");
    lcd.print(toplam);
    lcd.print("TL\n");
    Serial.print("\n");
}

void konsoldaSiparisler(){
  Serial.print("\nVerilen Siparişler\n");
   Serial.print("Su: ");
   Serial.print(ssu);
   Serial.print(" tane\n");
   
   Serial.print("Çay: ");
   Serial.print(scay);
   Serial.print(" tane\n");
   
   Serial.print("Kahve: ");
   Serial.print(skahve);
   Serial.print(" tane\n");
   
   Serial.print("Çikolata: ");
   Serial.print(scikolata);
   Serial.print(" tane\n");
   
   Serial.print("Bisküvi: ");
   Serial.print(sbiskuvi);
   Serial.print(" tane\n");
   
}



//a,b,c,d,f, kullanicibakiye zaten global o yüzden göndermeye gerek yok. guncelbakiye global yapılmalı
//int a, int b,int c,int d,int f,float kullanicibakiye,float guncelbakiye
void urunsec(){
    float harcamatutari=0;
    float paraustu=0;
    int ust=0, urunkontrol=0;
// Stok Kontrolu Islemi
    for(int i; i<5; i++)
    {   if(i==0) {
            if(ssu>urunler[i].urunStok){
                Serial.print("\nSectiginiz ");
                Serial.print(urunler[i].urunAd);
                Serial.print(" urunu elimizde yeteri kadar bulunmadigi icin tahsil edilememektedir.");
                ssu=0;
            }
        }
        if(i==1) {
            if(scay>urunler[i].urunStok){
                 Serial.print("\nSectiginiz ");
                Serial.print(urunler[i].urunAd);
                Serial.print(" urunu elimizde yeteri kadar bulunmadigi icin tahsil edilememektedir.");
                scay=0;
            }
        }
        if(i==2) {
            if(skahve>urunler[i].urunStok){
                Serial.print("\nSectiginiz ");
                Serial.print(urunler[i].urunAd);
                Serial.print(" urunu elimizde yeteri kadar bulunmadigi icin tahsil edilememektedir.");
                skahve=0;
            }
        }
        if(i==3) {
            if(scikolata>urunler[i].urunStok){
                Serial.print("\nSectiginiz ");
                Serial.print(urunler[i].urunAd);
                Serial.print(" urunu elimizde yeteri kadar bulunmadigi icin tahsil edilememektedir.");
                scikolata=0;
            }
        }
        if(i==4) {
            if(sbiskuvi>urunler[i].urunStok){
                Serial.print("\nSectiginiz ");
                Serial.print(urunler[i].urunAd);
                Serial.print(" urunu elimizde yeteri kadar bulunmadigi icin tahsil edilememektedir.");
                sbiskuvi=0;
            }
        }

    }
    for (int i = 0; i <5 ; ++i) {
        if(i==0)
            harcamatutari+=ssu*urunler[i].urunFiyat;
        if(i==1)
            harcamatutari+=scay*urunler[i].urunFiyat;
        if(i==2)
            harcamatutari+=skahve*urunler[i].urunFiyat;
        if(i==3)
            harcamatutari+=scikolata*urunler[i].urunFiyat;
        if(i==4)
            harcamatutari+=sbiskuvi*urunler[i].urunFiyat;
    }

    //printf("\nSecilen Urunler icin Harcanacak Tutar: %0.2f\n",harcamatutari);
    lcd.clear();
    lcd.print("Siparis:");
    lcd.print(harcamatutari);
    lcd.print("TL");
    delay(4000);
    
    if(harcamatutari>kullanicibakiye){
        Serial.print("\nAlisveris icin Bakiyeniz Yetersiz. ");
        lcd.clear();
        lcd.print("Bakiye yetersiz.");
        delay(4000);
    }// Kullanıcının Parasının Yetmemesi Durumu
        
    else if (harcamatutari==kullanicibakiye){
        Serial.print("\nAlisveris Gerceklesir... Para ustu yok.\n");
        lcd.clear();
        lcd.print("Para ustu yok.");
        delay(4000);
    }// Paranın Tam Yetmesi Durumu
       
    else if(harcamatutari<kullanicibakiye)//Verilen Paranın Harcamadan Fazla Olması Paraustu Verilecek
    {
        Serial.print("\nKullanici bakiyesi: ");
        Serial.print(kullanicibakiye);
        Serial.print("\nHarcama Tutari: ");
        Serial.print(harcamatutari);
        
        paraustu=kullanicibakiye-harcamatutari;
        Serial.print("\nVerilecek Para Ustumuz: ");
        Serial.print(paraustu);
        Serial.print("\nPara Ustu Hesaplaniyor...\n");

        //sleep(2);
        while(paraustu!=0.0)
        {
            paraustu-=0.25;
            ust++;
        }
        int birtl=ust/4;
        ust%=4;
        int ellikurus=ust/2;
        ust%=2;
        // 1TL 50Krs ve 25Krslarin sayisinin kontrolu
        if(birtl>banka.para[2]){
            Serial.print("\nPara ustu verilemiyor, bozuk 1 TL yetersiz");
        }
        if(ellikurus>banka.para[1]){
            Serial.print("\nPara ustu verilemiyor, bozuk 50 Kurus yetersiz");
        }
        if(ust>banka.para[0]){
            Serial.print("\nPara ustu verilemiyor, bozuk 25 Kurus yetersiz");
        }
        //printf("\nVerilecekler Bozuk Paralar \n 1 TL Sayisi: %d, 50 Kurus Sayisi: %d, 25 Kurus Sayisi: %d\n",birtl,ellikurus,ust);
        //1 TL Miktarı
        Serial.print(birtl);
        Serial.print(" tane 1TL");
        Serial.print("\n");
        //lcd.clear();
        //lcd.print(birtl);
        //lcd.print("tane 1TL");
        //delay(4000);
        
        //0.50 TL Miktarı
        Serial.print(ellikurus);
        Serial.print(" tane 0.50TL");
        Serial.print("\n");
        //lcd.clear();
        //lcd.print(ellikurus);
        //lcd.print("tane 0.5TL");
        //delay(4000);
        //0.25 TL Miktarı
        Serial.print(ust);
        Serial.print(" tane 0.25TL");
        Serial.print("\n");
        //lcd.clear();
        //lcd.print(ust);
        //lcd.print("tane 0.25TL");
        //delay(4000);
        banka.para[0]-=ust;
        banka.para[1]-=ellikurus;
        banka.para[2]-=birtl;
        //sleep(2);
    }
}




void bilgigonder()
{
    //Bu kod yorum satırına alınacak
    //int yirmibeskurus=5,ellikurus=10,birtl=15; //Kullanıcı Girdisi
    //int a=2,b=2,c=2,d=2,f=2; // Alınacak Ürünler
    
    char temp[30];
    strcpy(temp,input[0]);//20 20 10 -> temp
    kasabilgilerinial(temp);
    int i ;
    int sayi = 0  ;
    for(int i = 1 ; i < 6 ; i++)
    {
        strcpy(temp,input[i]);
        urunbilgilerinial(temp,sayi);
        sayi++ ;
    }

    //kasayigoster();
    //urunlerigoster();
    guncelbakiye=(banka.para[0]*0.25)+(banka.para[1]*0.5)+(banka.para[2]*1); //Kasadaki Toplam Para
    
    
    //yirmibeskurus, ellikurus, birt1 değişkenlerine butonlar ile değer atayan fonksiyon burada çağıralacak
    //lcd.print("BEFORE");
    //delay(3000);
    //kullanicibakiye=bakiyeyukle(yirmibesK,elliK,birTL); // Kullanici Bakiyesi

    //
    urunsec();

    kasayigoster();

}



void siparisYukle(){
   //Butonlarla alınan kullanıcı siparişlerini gerekli değişkenlere atama
   ssu = tempSu;
   scay = tempCay;
   skahve = tempKahve;
   scikolata = tempCikolata;
   sbiskuvi = tempBiskuvi;
   tempSu = 0;
   tempCay = 0;
   tempKahve = 0;
   tempCikolata = 0;
   tempBiskuvi = 0;
   
   float toplam = (ssu*0.5) + (scay*1) + (skahve*1.50) + (scikolata*1.75) + (sbiskuvi*2);
   konsoldaSiparisler();
   
   int temp;
   temp = paraSikismasi();
  if(temp == 2){
    delay(500); 
    digitalWrite(ledPin, HIGH);   // turn the LED on (HIGH is the voltage level)
    delay(4000);               // wait for a second
    digitalWrite(ledPin, LOW);
    Serial.print("\nPara sıkıştı.");
    
  } else{
   bilgigonder(); 
  }
}

int paraSikismasi(){
  int deger;
  deger = random(1,5);
  return deger;
}

void sifirla(){
   ssu = 0;
   scay = 0;
   skahve = 0;
   scikolata = 0;
   sbiskuvi = 0;
   birTL=0;
   elliK=0;
   yirmibesK=0;
}



void setup() {
  // set up the LCD's number of columns and rows:
  lcd.begin(16, 2);
  Serial.begin(9600);
  
  // Pinleri output olarak başlat:
  pinMode(ledPin, OUTPUT);      
  pinMode(ledPin3, OUTPUT);
  
  pinMode(yirmibes, INPUT_PULLUP);     
  pinMode(elli, INPUT_PULLUP);     
  pinMode(bir, INPUT_PULLUP);     
  pinMode(paraBitis, INPUT_PULLUP);     
  pinMode(su, INPUT_PULLUP); 
  pinMode(cay, INPUT_PULLUP);     
  pinMode(kahve, INPUT_PULLUP);     
  pinMode(cikolata, INPUT_PULLUP);     
  pinMode(biskuvi, INPUT_PULLUP);
  pinMode(siparisBitis, INPUT_PULLUP);
  pinMode(resetTusu, INPUT_PULLUP);
  
}

//float a=4.512342;
//char deneme[250];

void loop(){
  //Serial.println("kadir ");
  //Serial.println(a,2);
  //sprintf(deneme,"%d kere geldim %d kere gittim",4,5);
  //Serial.println(deneme);
  //delay(600);
  yirmibesDurumu = digitalRead(yirmibes);
  elliDurumu = digitalRead(elli);
  birDurumu = digitalRead(bir);
  paraBitisDurumu = digitalRead(paraBitis); 
  suDurumu = digitalRead(su);
  cayDurumu = digitalRead(cay);
  kahveDurumu = digitalRead(kahve);
  cikolataDurumu = digitalRead(cikolata);
  biskuviDurumu = digitalRead(biskuvi);
  siparisBitisDurumu = digitalRead(siparisBitis);
  resetTusuDurumu = digitalRead(resetTusu);
 
 //Müşteri bakiyesi alma
  if(yirmibesDurumu == LOW){
    delay(300);
    tempYirmibes++;
    lcd.clear();
    lcd.print("0.25TL");
  }
  if(elliDurumu == LOW){
    delay(300);
    tempElli++;
    lcd.clear();
    lcd.print("0.50TL");
  }
  if(birDurumu == LOW){
    delay(300);
    tempBir++;
    lcd.clear();
    lcd.print("1TL");
  }
  if(paraBitisDurumu == LOW){
    delay(300);
    bakiyeYukle();
  }
 
 //Sipariş alma 
  if(suDurumu == LOW){
    delay(300);
    tempSu++;
    lcd.clear();
  lcd.print("Su");
  }
  if(cayDurumu == LOW){
    delay(300);
    tempCay++;
    lcd.clear();
  lcd.print("Cay");
  }
  if(kahveDurumu == LOW){
    delay(300);
    tempKahve++;
    lcd.clear();
  lcd.print("Kahve");
  }
  if(cikolataDurumu == LOW){
    delay(300);
    tempCikolata++;
    lcd.clear();
  lcd.print("Cikolata");
  }
  if(biskuviDurumu == LOW){
    delay(300);
    tempBiskuvi++;
    lcd.clear();
    lcd.print("Buskivi");
  }
  if(siparisBitisDurumu == LOW){
    delay(300);
    siparisYukle();
  }
  //Reset butonu
  if(resetTusuDurumu == LOW){
    delay(300);
    //digitalWrite(ledPin3, HIGH);   // turn the LED on (HIGH is the voltage level)
    //delay(4000);               // wait for a second
    //digitalWrite(ledPin3, LOW);
    sifirla();
    lcd.clear();
    lcd.print("Sifirlandi");
    Serial.print("Siparişler ve Kullanıcı bakiyesi sıfırlandı.");
    
  }
}

