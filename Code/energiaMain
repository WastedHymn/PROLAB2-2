int i = 0;

const char *input[] = {"20,20,10","1,su,30,0.5","2,cay,20,1.0","3,kahve,15,1.5","4,cikolata,50,1.75","5,biskuvi,100,2.0"};
struct urun{
    int urunId;
    char urunAd[30];
    int urunStok;
    float urunFiyat;
}urunler[5];

struct hesap{
    int para[3];

}banka;

//Diziden kasa bilgilerini al.
void kasabilgilerinial(char gelensatir[30])
{
    int x=0;
    char *line ;
    char const virgul[2] = "," ;
    line = strtok(gelensatir,virgul);
    while(line != NULL)
    {
        // 20 -> int 20
        banka.para[x] = atoi(line);
        line = strtok(NULL,virgul);
        x++;
    }
}

//Diziden ürün bilgilerini al.
void urunbilgilerinial(char satir[] , int sayi)
{
    int x = 0 ;
    char *line ;
    char const virgul[2] = "," ;
    line = strtok(satir,virgul);
    while(line != NULL)
    {
        // x = 0 iken ürünün id
        if(x == 0)
        {
            urunler[sayi].urunId = sayi+1 ;
        }
            // x = 1 ne alıyorum nereye göndercem
            // x = 1 -> ürünün ismi var
        else if(x == 1 )
        {
            strcpy(urunler[sayi].urunAd,line);
        }

        else if(x==2)
            urunler[sayi].urunStok=atoi(line);
        else if(x==3)
            urunler[sayi].urunFiyat=atof(line);
        // yazacağın yer  = atoi(string) ;


        line = strtok(NULL,virgul);
        x++ ;
    }
}

void bakiyeYukle()
{   
    yirmibesK = tempYirmibes;
    elliK = tempElli;
    birTL = tempBir;
    
    float toplam=0;
    
    toplam+=tempYirmibes*0.25;
    toplam+=tempElli*0.50;
    toplam+=tempBir*1.0;
    
    banka.para[0]+=yirmibesK;
    banka.para[1]+=elliK;
    banka.para[2]+=birTL;
    
    //printf("\nKullanicinin Yukledigi Para Miktari: %0.2f TL\n",toplam);
    kullanicibakiye = toplam;
  
    Serial.print("0.25TL:");
    Serial.print(yirmibesK);
    Serial.print("tane\n");
  
    Serial.print("0.50TL:");
    Serial.print(elliK);
    Serial.print("tane\n");
  
    Serial.print("1TL:");
    Serial.print(birTL);
    Serial.print("tane\n");
    Serial.print("\n");
    Serial.print("Kullanıcı Bakiyesi: ");
    Serial.print(kullanicibakiye);
    Serial.print("\n");
    lcd.clear();
    lcd.print(toplam);
    lcd.print("TL attiniz.");
    tempYirmibes = 0;
    tempElli = 0;
    tempBir = 0;
    //return toplam;
}

